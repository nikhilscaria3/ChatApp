<!DOCTYPE html>
<html>

<head>
  <title>Chat App - Chat Page</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  <link href="/admin.css" rel="stylesheet">
  <link href="/course.css" rel="stylesheet">

  <style>
    body {
      font-family: cursive, sans-serif;
      margin: 0;
      padding: 0;
      background: linear-gradient(to right, #0a7cc8, #3d7eb3, #6d81a0, #9e838d);
    }

    .container {
      margin-left: 200px;
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
      background-color: #f0f0f0;
      border-radius: 8px;
      display: flex;
      flex-direction: column;
      height: 600px;
      /* Adjust the height as needed */
    }


    #messages {
      flex-grow: 1;
      overflow-y: auto;
      padding-bottom: 10px;
    }

    #messages::-webkit-scrollbar {
      display: none;
      /* Hide the scroll line */
    }

    .message {
      margin-bottom: 10px;
      padding: 10px;
      background-color: #ffffff;
      border-radius: 4px;
      box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
    }

    .message p {
      margin: 0;
    }

    #message-form {
      margin-top: 20px;
    }

    #message-form input[type="text"],
    #message-form button {
      padding: 8px 12px;
      border: none;
      border-radius: 4px;
    }

    #message-form input[type="text"] {
      width: 150px;
      margin-right: 10px;
    }

    #message-form input[type="text"]::placeholder {
      color: #aaaaaa;
    }

    #message-form button {
      background-color: #4caf50;
      color: #ffffff;
      cursor: pointer;
    }

    #message-form button:hover {
      background-color: #45a049;
    }

    .tick {
      display: inline-block;
      width: 10px;
      height: 10px;
      margin-left: 5px;
      color: #007bff;
    }

    .tick.delivered {
      background-color: #007bff;
    }

    .message p {
      margin: 0;
    }

    .message {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-top: 5px;
      color: #070707;
      font-size: 12px;
    }

    .head {
      justify-content: center;
      text-align: center;

    }

    .offcanvas {
      position: fixed;
      top: 0;
      left: 0;
      height: 100vh;
      overflow-y: auto;
      width: 200px;
      /* Adjust the width as needed */
      transform: translateX(0);
    }
  </style>

  <style>
    /* Your existing CSS styles here */

    /* Styles for small screens (up to 576px) */
    @media (max-width: 576px) {

      /* Sidebar styles */
      #sidebar {
        position: fixed;
        top: 0;
        left: -250px;
        width: 250px;
        height: 100vh;
        background-color: #f5f5f5;
        z-index: 9999;
        transition: left 0.3s ease-in-out;
      }

      #sidebar.active {
        left: 0;
      }

      #sidebar .brand {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 50px;
        background-color: #fff;
      }

      #sidebar .brand i {
        font-size: 24px;
      }

      #sidebar ul.side-menu {
        list-style-type: none;
        padding: 0;
        margin: 0;
      }

      #sidebar ul.side-menu li {
        padding: 10px 20px;
        border-bottom: 1px solid #ccc;
      }

      #sidebar ul.side-menu li:last-child {
        border-bottom: none;
      }

      #sidebar ul.side-menu li a {
        display: block;
        text-decoration: none;
        color: #333;
      }

      #sidebar ul.side-menu li a i {
        margin-right: 10px;
      }

      /* Toggle button styles */
      #sidebarToggle {
        position: fixed;
        top: 10px;
        left: 10px;
        z-index: 99999;
        cursor: pointer;
      }

      #sidebarToggle .bar {
        width: 30px;
        height: 3px;
        background-color: #333;
        margin-bottom: 5px;
      }

      #content {
        width: calc(100% - 0px);
        left: 0px;

      }
    }

    @media (min-width: 576px) {

      .offcanvas-lg {
        display: none;
      }
    }
  </style>

</head>

<body>
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/createUser" method="POST">
            <label for="name" class="form-label">Name</label>
            <input type="text" id="name" name="name" class="form-input" onkeyup="validateName()" required>
            <span id="name-error"></span><br>

            <label for="name" class="form-label">Email</label>
            <input type="text" class="form-control" id="email" name="email" onkeyup="validateEmail()">
            <span id="email-error"></span><br>

            <label for="mobile" class="form-label">Mobile</label>
            <input type="tel" name="mobile" id="mobile" class="form-input" onkeyup="validateMobile()" required>
            <span id="mobile-error"></span><br>

            <input type="submit" value="Submit">
          </form>
        </div>
      </div>
    </div>
  </div>



  <div class="main">
    <section id="sidebar" class="hide-on-med-and-down">
      <a href="#" class="brand">
        <i class='bx bxs-smile'></i>
      </a>
      <ul class="side-menu top">
        {{#each users}}
        <li class="active">
          <a href="/chat?identifier={{this.identifier}}" class="">
            <i class='bx bxs-dashboard'></i>
            <span class="text cart-link">{{this.name}}:-:-:{{this.mobile}}</span>
          </a>
        </li>
        {{/each}}
      </ul>
    </section>

    <!-- SIDEBAR -->
    <!-- CONTENT -->
    <section id="content">
      <!-- NAVBAR -->
      <nav>
        <button class="btn btn-primary d-lg-none" type="button" data-bs-toggle="offcanvas"
          data-bs-target="#offcanvasResponsive" aria-controls="offcanvasResponsive"><i
            class="fa-sharp fa-solid fa-bars"></i></button>

        <div class="offcanvas-lg offcanvas-end" tabindex="-1" id="offcanvasResponsive"
          aria-labelledby="offcanvasResponsiveLabel">
          <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasResponsiveLabel">Responsive offcanvas</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" data-bs-target="#offcanvasResponsive"
              aria-label="Close"></button>
          </div>
          <div class="offcanvas-body">
            <ul class="side-menu top">
              {{#each users}}
              <li class="active">
                <a href="/chat?identifier={{this.identifier}}" class="">
                  <i class='bx bxs-dashboard'></i>
                  <span class="text cart-link">{{this.name}}:-:-:{{this.mobile}}</span>
                </a>
              </li>
              {{/each}}
            </ul>
          </div>
        </div>

        <i class='bx bx-menu'></i>
        <a href="/category" class="nav-link">Categories</a>
        <form action="#">
          <div class="form-input">
            <input type="search" placeholder="Search...">
            <button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
          </div>
        </form>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
          <i class="fa-solid fa-user-plus"></i>
        </button>
        <input type="checkbox" id="switch-mode" hidden>
        <label for="switch-mode" class="switch-mode"></label>
      </nav>
      <!-- NAVBAR -->

      <h1 class="head">Chat App</h1>

      <div class="container">
        <div id="messages">
          {{#each messages}}
          <div class="message">

            <p><strong>{{this.sender}}:</strong> {{this.content}}</p>
            {{#with (lookup ../formattedTimes @index)}}
            <div class="message-info">
              <p>{{day}}, {{time}}</p>
              <i class="fa-solid fa-check-double tick"></i>
            </div>
            {{/with}}
          </div>
          {{/each}}
        </div>


        <form id="message-form" action="">
          <input id="sender" type="text" value="user" disabled>
          <input id="senderid" type="text" value="{{identifier}}" disabled>
          <input id="contents" type="text" placeholder="Type your message">
          <button type="submit">Send</button>
        </form>
      </div>
  </div>
  </section>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.4.1/socket.io.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    const socket = io();

    const messageForm = document.getElementById('message-form');
    const contentInput = document.getElementById('contents');
    const senderInput = document.getElementById('sender').value;
    const senderIdInput = document.getElementById('senderid').value;

    messageForm.addEventListener('submit', (e) => {
      e.preventDefault();

      const content = contentInput.value.trim();
      if (content) {
        const message = {
          sender: senderInput,
          content: content,
          senderid: senderIdInput
        };

        socket.emit('chat message', message);
        contentInput.value = '';
      }
    });

    socket.on('chat message', (message) => {
      appendMessage(message);
    });

    const currentDate = new Date();
    const temporaryDate = new Date(); // Example: June 28, 2023, 8:36:00

    // Format the temporary date and time
    const options = { day: 'numeric', month: 'short', hour: 'numeric', minute: 'numeric', hour12: true };
    const temporaryTime = temporaryDate.toLocaleString('en-IN', options);



    function appendMessage(message) {
      const messagesDiv = document.getElementById('messages');
      const messageDiv = document.createElement('div');
      messageDiv.classList.add('message');
      messageDiv.innerHTML = `
  <p><strong>${message.sender}:</strong> ${message.content}</p>
  <div class="message-info">
 
    <span class="temporary-time">${temporaryTime}</span><br>
       <i class="fa-solid fa-check-double tick"></i>
  </div>
`;
      messagesDiv.appendChild(messageDiv);
    }

  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
    crossorigin="anonymous"></script>

</body>

</html>